// Prismaスキーマファイル
// データベースモデルの定義
// See: docs/db-table-structure.md

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  firebaseUid String   @unique @map("firebase_uid")
  email       String?
  name        String?
  imageUrl    String?  @map("image_url")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  workouts  Workout[]
  exercises Exercise[]

  @@map("users")
}

model Workout {
  id               String    @id @default(cuid())
  userId           String    @map("user_id")
  performedStartAt DateTime  @map("performed_start_at")
  performedEndAt   DateTime? @map("performed_end_at")
  place            String?
  note             String?
  deletedAt        DateTime? @map("deleted_at")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  user             User              @relation(fields: [userId], references: [id])
  workoutExercises WorkoutExercise[]

  @@map("workouts")
}

model Exercise {
  id         String    @id @default(cuid())
  userId     String?   @map("user_id") // プリセット種目の場合は NULL
  isPreset   Boolean   @default(false) @map("is_preset")
  name       String
  bodyPart   Int?      @map("body_part")
  laterality Int?      @map("laterality")
  deletedAt  DateTime? @map("deleted_at")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")

  user             User?             @relation(fields: [userId], references: [id])
  workoutExercises WorkoutExercise[]

  // カスタム種目: ユーザーごとに名前がユニーク
  // プリセット種目: 名前のユニーク制約はアプリケーションレベルで制御（シードで登録）
  @@unique([userId, name])
  @@map("exercises")
}

model WorkoutExercise {
  id         String   @id @default(cuid())
  workoutId  String   @map("workout_id")
  exerciseId String   @map("exercise_id")
  orderIndex Int      @map("order_index")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  workout     Workout      @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exercise    Exercise     @relation(fields: [exerciseId], references: [id], onDelete: Restrict)
  workoutSets WorkoutSet[]

  // 同じworkoutに同じexerciseは1回のみ追加が可能
  @@unique([workoutId, exerciseId])
  // 同じworkout内で表示順は重複不可
  @@unique([workoutId, orderIndex])
  @@map("workout_exercises")
}

model WorkoutSet {
  id                String   @id @default(cuid())
  workoutExerciseId String   @map("workout_exercise_id")
  weight            Int?
  reps              Int?
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  workoutExercise WorkoutExercise @relation(fields: [workoutExerciseId], references: [id], onDelete: Cascade)

  @@map("workout_sets")
}
