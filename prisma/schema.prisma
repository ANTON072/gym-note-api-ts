// Prismaスキーマファイル
// データベースモデルの定義
// See: docs/db-table-structure.md

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  firebaseUid String   @unique @map("firebase_uid")
  email       String?
  name        String?
  imageUrl    String?  @map("image_url")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  trainingSessions TrainingSession[]
  exercises        Exercise[]

  @@map("users")
}

// トレーニング日（旧 Workout）
// ある日のトレーニング全体（日付、場所、時間）を表す
model TrainingSession {
  id               String    @id @default(cuid())
  userId           String    @map("user_id")
  performedStartAt DateTime  @map("performed_start_at")
  performedEndAt   DateTime? @map("performed_end_at")
  place            String?
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  user     User      @relation(fields: [userId], references: [id])
  workouts Workout[]

  @@map("training_sessions")
}

// ワークアウト（旧 WorkoutExercise）
// 1つの種目の実施記録（種目＋セット群＋メモ）を表す
model Workout {
  id                String   @id @default(cuid())
  trainingSessionId String   @map("training_session_id")
  exerciseId        String   @map("exercise_id")
  orderIndex        Int      @map("order_index")
  note              String?
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  trainingSession TrainingSession @relation(fields: [trainingSessionId], references: [id], onDelete: Cascade)
  exercise        Exercise        @relation(fields: [exerciseId], references: [id], onDelete: Restrict)
  workoutSets     WorkoutSet[]

  // 同じtrainingSessionに同じexerciseは1回のみ追加が可能
  @@unique([trainingSessionId, exerciseId])
  // 同じtrainingSession内で表示順は重複不可
  @@unique([trainingSessionId, orderIndex])
  @@map("workouts")
}

// 種目マスタ（プリセット＋カスタム）
model Exercise {
  id           String   @id @default(cuid())
  userId       String?  @map("user_id") // プリセット種目の場合は NULL
  isPreset     Boolean  @default(false) @map("is_preset")
  name         String
  bodyPart     Int?     @map("body_part")
  exerciseType Int      @default(0) @map("exercise_type") // 0: 筋トレ, 1: 有酸素
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user     User?     @relation(fields: [userId], references: [id])
  workouts Workout[]

  // カスタム種目: ユーザーごとに名前がユニーク
  // プリセット種目: 名前のユニーク制約はアプリケーションレベルで制御（シードで登録）
  @@unique([userId, name])
  @@map("exercises")
}

// セット記録
// 筋トレ用と有酸素用のフィールドを持つ
model WorkoutSet {
  id        String   @id @default(cuid())
  workoutId String   @map("workout_id")
  // 筋トレ用
  weight    Int?     // 重量（グラム）- フロント側で kg に変換
  reps      Int?
  // 有酸素用
  distance  Int?     // 距離（メートル）
  duration  Int?     // 時間（秒）
  speed     Int?     // 速さ（0.1 km/h 単位）- 例: 10.5 km/h → 105
  calories  Int?     // カロリー（kcal）
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  workout Workout @relation(fields: [workoutId], references: [id], onDelete: Cascade)

  @@map("workout_sets")
}
